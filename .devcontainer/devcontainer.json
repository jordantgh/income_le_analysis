{
  "name": "Income LE R Development Container",
  "image": "jordantdocker/income_le_analysis:latest",
  // Build from local dockerfile; ONLY do this from a non-container env to test
  // major or potentially breaking Dockerfile/requirements.r changes:
  //"dockerFile": "Dockerfile" 
  "updateRemoteUserUID": true,
  "forwardPorts": [
    3832
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "REditorSupport.r",
        "ms-azuretools.vscode-docker",
        "eamodio.gitlens"
      ],
      "settings": {
        "extensions.ignoreRecommendations": true,
        "terminal.integrated.defaultProfile.linux": "zsh", 
        "terminal.integrated.profiles.linux": {
            "zsh": {
                "path": "/usr/bin/zsh"
            }
        },
        "r.bracketedPaste": true,
        "r.rterm.linux": "/home/ile_dev/.local/bin/radian",
        "r.lsp.enabled": true,
        "r.rpath.linux": "/usr/bin/R",
        "r.rterm.options": [
          "--no-save",
          "--no-restore"
        ]}
    }
  },
  "workspaceMount": "source=${localWorkspaceFolder},target=/app,type=bind",
  "workspaceFolder": "/app",
  "postCreateCommand": "mkdir -p ~/.ssh && printf 'Host github.com\nHostName github.com\nUser git' > ~/.ssh/config && chmod 600 ~/.ssh/config"
}